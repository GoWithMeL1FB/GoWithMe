{
  "extends": [
    "airbnb-base",
    "plugin:security/recommended",
    "eslint:recommended",
    "plugin:node/recommended"
    ],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
    },
  "plugins": [
    "node",
    "security",
    "mocha",
    "import",
    "prettier"
    ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
    },
  "rules": {
    "linebreak-style": 1,
    "semi": ["error", "always"],
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "trailingComma": true }
    ],
    "no-console": "off",
  "import/first": 1,
  "import/prefer-default-export": 0,
  "import/no-unresolved": [
    2,
    { "caseSensitive": false }
  ],
  "jest/no-disabled-tests": "warn",
  "jest/no-focused-tests": "error",
  "jest/no-identical-title": "error",
  "jest/prefer-to-have-length": "warn",
  "jest/valid-expect": "error"
  },
  "parserOptions": { "ecmaVersion": 8 },
  "env": { "es6": true },
  "ecmaFeatures": {
    "jsx": true
  }
}